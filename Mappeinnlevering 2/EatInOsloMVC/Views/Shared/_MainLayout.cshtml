<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/main-style.css")">
    <title>EatInOslo</title>

</head>
<body>
    <div>
        <header id="header">
            
            <a id="logo" asp-controller="UserRestaurant" 
                asp-action="ShowRestaurants">EatInOslo</a>
        </header>

        <nav id="navbar">
                 <a asp-controller="UserRestaurant" 
                asp-action="ShowRestaurants">Vis alle restauranter</a>        
                <a asp-controller="UserRestaurant" asp-action="WriteReviews">Skriv en annmeldelse</a>
                <a asp-controller="AdminRestaurant" asp-action="AdminPage">Admin page</a>
        </nav>
        
        <main>
            @RenderBody()
        </main>

        <footer>
            <p id="footer">EatInOslo &copy; 2018</p>
        </footer>
    </div>


</body>
</html>