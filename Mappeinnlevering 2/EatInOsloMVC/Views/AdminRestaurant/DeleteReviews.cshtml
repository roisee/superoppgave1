@model Review

<section>

    <header>
        <h3>Delete review</h3>
    </header>

    <h1 class="delete-warning">Are you sure you want to delete this review?</h1>
    <section>
            <h4>ID: @Html.DisplayFor(review => review.Title)</h4>
            <h4>Name: @Html.DisplayFor(review => review.AuthorName)</h4>
            <h4>Name: @Html.DisplayFor(review => review.ReviewText)</h4>
            <form asp-action="DeleteReviews">
                <input asp-for="ID" type="hidden">
                <input type="submit" value="Delete review">
            </form>
    </section>


</section>