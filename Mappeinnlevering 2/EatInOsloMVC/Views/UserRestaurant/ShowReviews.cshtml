@model IEnumerable<Review>
<section>
    <header>
        <h3>View reviews</h3>
    </header>

        <section>
            @foreach (var reviews in Model)
            {

                if (@reviews.RestaurantID == 1)
                
                {
                   <h3>@reviews.RestaurantID - @reviews.Title</h3>
                   <h4>@reviews.AuthorName mener:</h4>
                   <p>@reviews.ReviewText</p>
                }
            }

        </section>
    </section>
</section>